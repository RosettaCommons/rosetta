cd %(workdir)s

[ -x %(bin)s/r_pdb2top.%(binext)s ] || exit 1
%(bin)s/r_pdb2top.%(binext)s %(additional_flags)s @flags -database %(database)s -run:constant_seed -nodelay  2>&1 \
    | egrep -vf ../../ignore_list \
	 | egrep -v 'Total' \
	 | egrep -v 'Readin' \
	 | egrep -v 'Cluster:' \
    > log

test "${PIPESTATUS[0]}" != '0' && exit 1 || true  # Check if the first executable in pipe line return error and exit with error code if so

